<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mainRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity"
        android:padding="@dimen/dp_16">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewSpinnerHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification_style"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerNotificationStyle"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_below="@id/textViewSpinnerHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_above="@id/buttonNotificationBasic"
            android:layout_below="@id/spinnerNotificationStyle"
            android:id="@+id/textViewNotificationDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonNotificationBasic"
            android:text="@string/basic_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/buttonSubmit"/>

    <androidx.appcompat.widget.AppCompatButton
            android:text="@string/launch_notification"
            android:id="@+id/buttonSubmit"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"/>
</RelativeLayout>
